@model List<ResultCourseDto>
@{
    ViewData["Title"] = "Kurslarım";
    Layout = "~/Areas/Teacher/Views/TeacherLayout/Index.cshtml";
}

@{
	int count = 0;
}

<table class="table table-hover">

	<tr>
		<th>#</th>
		<th>Resim</th>
		<th>Kurs Adı</th>
		<th>Fiyat</th>
		<th>Kategori</th>
		
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td><img src="@item.ImageURL" style="height:75px;width:75px"></img></td>
			<td>@item.CourseName</td>
			
			<td>@item.Category.Name</td>
			
			<td>



				<a asp-action="DeleteCourse" asp-controller="MyCourse" asp-area="Teacher" asp-route-id="@item.CourseID" class="btn btn-outline-danger">Sil </a>
				<a asp-action="UpdateCourse" asp-controller="MyCourse" asp-area="Teacher" asp-route-id="@item.CourseID" class="btn btn-outline-info">Güncelle </a>
				<a asp-action="CourseVideos" asp-controller="MyCourse" asp-area="Teacher" asp-route-id="@item.CourseID" class="btn btn-outline-info">Kurs Videoları </a>




			</td>
			

		</tr>


	}
</table>

<br />
<a asp-action="CreateCourse" asp-controller="MyCourse" asp-area="Teacher" class="btn btn-outline-primary">Kurs Ekle</a>

<script>

	function DeleteContact(id) {
