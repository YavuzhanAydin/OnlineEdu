@model List<ResultCourseCategoriesDto>
@{
    ViewData["Title"] = "Kurs Kategori Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




@{
	int count = 0;
}

<table class="table table-hover">

	<tr>
		<th>#</th>
		<th>Kurs Kategori Adı</th>
		<th>Açıklama</th>
		<th>Gösterilme Durumu</th>

		<th></th>
		<th>Ana Sayfada</th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>@item.Name</td>
			<td>@item.Description</td>
			<td>@(item.IsShown ? "Gösteriliyor" : "Gösterilmiyor")</td>
		

			<td>



				<a asp-action="DeleteCourseCategory" asp-controller="CourseCategory" asp-area="Admin" asp-route-id="@item.CourseCategoryID" class="btn btn-outline-danger">Sil </a>
				<a asp-action="UpdateCourseCategory" asp-controller="CourseCategory" asp-area="Admin" asp-route-id="@item.CourseCategoryID" class="btn btn-outline-info">Güncelle </a>
				



			</td>
			<td>
				<a asp-action="ShowOnHome" asp-controller="CourseCategory" asp-area="Admin" asp-route-id="@item.CourseCategoryID" class="btn btn-outline-success">Göster </a>
				<a asp-action="DontShowOnHome" asp-controller="CourseCategory" asp-area="Admin" asp-route-id="@item.CourseCategoryID" class="btn btn-outline-secondary">Gösterme </a>


			</td>

		</tr>


	}
</table>

<br />
<a asp-action="CreateCourseCategory" asp-controller="CourseCategory" asp-area="Admin" class="btn btn-outline-primary">Kurs Kategori  Ekle</a>

<script>

	function DeleteContact(id) {
