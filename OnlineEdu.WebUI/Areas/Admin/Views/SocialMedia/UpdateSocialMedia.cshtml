@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "Sosyal Medya Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="SocialMediaID" />
    <label>Sosyal Medya Adı</label>
    <input type="text" asp-for="Title" class="form-control"></input>
    <br />

    <label>Sosyal Medya URL Linki</label>
    <input type="text" asp-for="URL" class="form-control"></input>
    <br />
    <label>İkon</label>
    <input type="text" asp-for="Icon" class="form-control"></input>
    <br />

    <button class="btn btn-outline-primary">Güncelle </button>
</form>



